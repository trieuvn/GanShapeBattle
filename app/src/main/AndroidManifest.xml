<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GanShapeBattle">
        <activity
            android:name=".DesignActivity"
            android:exported="false" />
        <activity
            android:name=".admin.Admin"
            android:exported="false" />
        <activity
            android:name=".ForgotPassword"
            android:exported="false" /> <!-- <activity -->
        <!-- android:name=".ui.login.ForgotPassword" -->
        <!-- android:exported="false" -->
        <!-- android:label="@string/title_activity_forgot_password" /> -->
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".Leaderboard"
            android:exported="false" />
        <activity
            android:name=".GameRoom"
            android:exported="false" />
        <activity
            android:name=".admin.CreateCategory"
            android:exported="false" />
        <activity
            android:name=".admin.Gallery"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:launchMode="singleTask">

            <!-- Khởi động app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep-link Supabase OAuth callback: com.ganshapebattle://oauth-callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="com.ganshapebattle"
                    android:host="oauth-callback" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LobbyActivity"
            android:exported="false" />
        <activity
            android:name=".LobbyUserActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="com.ganshapebattle"
                    android:host="auth"
                    android:pathPrefix="/reset-password" />
            </intent-filter>
        </activity>
        <activity android:name=".admin.MenuActivity" />
        <activity android:name=".admin.UserCRUDActivity" />
        <activity android:name=".admin.UserDetailActivity" />
        <activity android:name=".admin.AddEditUserActivity" />
        <activity android:name=".admin.PictureCRUDActivity" />
        <activity android:name=".admin.PictureDetailActivity" />
        <activity android:name=".admin.AddEditPictureActivity" />
        <activity android:name=".admin.LobbyCRUDActivity" />
        <activity android:name=".admin.LobbyDetailActivity" />
        <activity android:name=".admin.AddEditLobbyActivity" />
        <activity android:name=".admin.GalleryCRUDActivity" />
        <activity android:name=".admin.GalleryDetailActivity" />
        <activity android:name=".admin.AddEditGalleryActivity" />
        <activity android:name=".admin.PlayerCRUDActivity" />
        <activity android:name=".admin.PlayerDetailActivity" />
        <activity android:name=".admin.AddEditPlayerActivity" />
        <activity android:name=".VerifyOtpActivity" />
        <activity android:name=".VerifySignupOtpActivity" />
        <activity android:name=".GameEndActivity" />
    </application>

</manifest>