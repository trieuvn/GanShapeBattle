<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.GalleryCRUDActivity">

    <!-- SearchBar (Material 3) -->
    <com.google.android.material.search.SearchBar
        android:id="@+id/searchViewGalleries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Tìm kiếm theo tên bộ sưu tập..."
        app:icon="@drawable/ic_search"
        app:iconTint="#0A6AED"
        app:strokeColor="#0A6AED"
        app:strokeWidth="1.5dp"
        app:cornerRadius="24dp"
        android:backgroundTint="#FFFFFF"
        style="@style/Widget.Material3.SearchBar.Outlined"/>

    <!-- ListView (giữ nguyên) -->
    <ListView
        android:id="@+id/lvGalleries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddGallery"
        android:layout_below="@id/searchViewGalleries"
        android:layout_marginTop="90dp"
        android:clipToPadding="false"
        android:divider="#EEEEEE"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- FAB Tạo bộ sưu tập -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Tạo mới"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_add_gallery"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="20dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="Tạo bộ sưu tập mới"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddGallery"
        android:layout_below="@id/searchViewGalleries"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_gallery"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chưa có bộ sưu tập nào"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn nút bên dưới để tạo mới"
            android:textColor="#BBBBBB"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>