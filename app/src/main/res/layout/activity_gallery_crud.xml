<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.GalleryCRUDActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewGalleries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="@string/search_gallery_hint"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_gallery_hint"
        android:background="@drawable/bg_soft_blue_gradient"
        app:cornerRadius="24dp"
        style="@style/Widget.AppCompat.SearchView.ActionBar"/>
    <ListView
        android:id="@+id/lvGalleries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddGallery"
        android:layout_below="@id/searchViewGalleries"
        android:layout_marginTop="90dp"
        android:clipToPadding="false"
        android:divider="#EEEEEE"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="@string/create_new_gallery_button"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/ic_add_gallery"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/btn_gradient_blue"
        android:elevation="8dp"
        android:stateListAnimator="@drawable/button_elevation"
        android:contentDescription="@string/CreateNewGallery"/>
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddGallery"
        android:layout_below="@id/searchViewGalleries"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_gallery"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chưa có bộ sưu tập nào"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn nút bên dưới để tạo mới"
            android:textColor="#BBBBBB"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>