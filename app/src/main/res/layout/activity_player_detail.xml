<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.PlayerDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết người chơi"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0A6AED"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"/>

        <!-- Avatar + Username -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#0A6AED"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivPlayerAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/AvatarCircle"
                    app:strokeColor="#0A6AED"
                    app:strokeWidth="2dp"
                    android:src="@drawable/ic_default_avatar"
                    android:contentDescription="Avatar người chơi" />

                <!-- Username -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"/>

                    <TextView
                        android:id="@+id/tvPlayerUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        tools:text="player_one"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Thông tin chi tiết -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#0A6AED"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Lobby ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lobby ID"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"/>
                    <TextView
                        android:id="@+id/tvPlayerLobbyId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        tools:text="lobby-123"/>
                </LinearLayout>

                <!-- Điểm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Điểm"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"/>
                    <TextView
                        android:id="@+id/tvPlayerPoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        tools:text="1500"/>
                </LinearLayout>

                <!-- Hạng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hạng"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"/>
                    <TextView
                        android:id="@+id/tvPlayerRank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        tools:text="1"/>
                </LinearLayout>

                <!-- Picture ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Picture ID"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"/>
                    <TextView
                        android:id="@+id/tvPlayerPictureId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        tools:text="pic-456"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Cập nhật -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdatePlayer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cập nhật"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gradient_blue"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="16dp"
                android:elevation="8dp"
                android:stateListAnimator="@drawable/button_elevation"/>

            <!-- Xóa -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeletePlayer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Xóa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/btn_red"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="16dp"
                android:elevation="8dp"
                android:stateListAnimator="@drawable/button_elevation"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>