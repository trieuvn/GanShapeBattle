<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".admin.PlayerDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card for player info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:padding="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Username -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="50px"
                    android:layout_marginBottom="2dp"
                    android:text="Username"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="player_one" />

                <!-- Lobby ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="2dp"
                    android:text="Lobby ID"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerLobbyId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="lobby-123" />

                <!-- Điểm -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="2dp"
                    android:text="Điểm"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="1500" />

                <!-- Hạng -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="2dp"
                    android:text="Hạng"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="1" />

                <!-- Picture ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="2dp"
                    android:text="Picture ID"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlayerPictureId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginBottom="0dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:text="pic-456" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_update_gradient"
                android:paddingVertical="14dp"
                android:text="Cập nhật"
                android:textColor="#ffffff"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_delete_gradient"
                android:paddingVertical="14dp"
                android:text="Xóa"
                android:textColor="#ffffff"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
