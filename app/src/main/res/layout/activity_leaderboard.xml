<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    android:fillViewport="true"
    tools:context=".Leaderboard">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderboard_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08"
            android:layout_marginBottom="28dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/podiumContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/player2_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivPlayerAvatar2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_default_avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#C0C0C0"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_medal_silver_small"
                        android:layout_marginTop="-16dp"/>

                    <TextView
                        android:id="@+id/tvPlayerName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Player 2"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvScore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="850 pts"
                        android:textColor="#10B981"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/player1_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.32"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivPlayerAvatar1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_default_avatar"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#FFD700"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_crown_circle"
                        android:layout_marginTop="-18dp"/>

                    <TextView
                        android:id="@+id/tvPlayerName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Player 1"
                        android:textColor="#0D47A1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1000 pts"
                        android:textColor="#10B981"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/player3_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivPlayerAvatar3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_default_avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#CD7F32"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_medal_bronze_small"
                        android:layout_marginTop="-16dp"/>

                    <TextView
                        android:id="@+id/tvPlayerName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Player 3"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvScore3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="750 pts"
                        android:textColor="#10B981"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/top5Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/player4_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_4_label"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E40AF"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/ivPlayerAvatar4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_default_avatar"/>

                    <TextView
                        android:id="@+id/tvPlayerName4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        tools:text="Player 4"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScore4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="600 pts"
                        android:textColor="#10B981"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/player5_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_5_label"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E40AF"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/ivPlayerAvatar5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_default_avatar"/>

                    <TextView
                        android:id="@+id/tvPlayerName5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        tools:text="Player 5"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScore5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="550 pts"
                        android:textColor="#10B981"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_players_label"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_trophy_small"
            android:drawablePadding="8dp" />

        <ListView
            android:id="@+id/lvOtherPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_rounded"
            android:divider="#E5E7EB"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/back_to_menu_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="@drawable/btn_gradient_blue"
            app:rippleColor="#33FFFFFF"
            app:cornerRadius="16dp"
            android:elevation="8dp"
            android:stateListAnimator="@animator/button_elevation"/>
    </LinearLayout>
</ScrollView>