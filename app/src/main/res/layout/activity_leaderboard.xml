<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF"
    android:fillViewport="true"
    tools:context=".Leaderboard">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="🏆 Leaderboard 🏆"
            android:textColor="#0D47A1"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Bục top 1–3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/podiumLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp">

            <!-- Top 2 -->
            <LinearLayout
                android:id="@+id/top2Layout"
                android:layout_width="80dp"
                android:layout_height="180dp"
                android:layout_marginEnd="16dp"
                android:background="#BBDEFB"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/top1Layout"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imgTop2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player 2"
                    android:textColor="#0D47A1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="850 pts"
                    android:textColor="#1565C0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Top 1 -->
            <LinearLayout
                android:id="@+id/top1Layout"
                android:layout_width="100dp"
                android:layout_height="220dp"
                android:background="#BBDEFB"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/top3Layout"
                app:layout_constraintStart_toEndOf="@id/top2Layout">

                <ImageView
                    android:id="@+id/imgTop1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_users" />

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player 1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1000 pts"
                    android:textColor="#E3F2FD"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Top 3 -->
            <LinearLayout
                android:id="@+id/top3Layout"
                android:layout_width="80dp"
                android:layout_height="160dp"
                android:layout_marginStart="16dp"
                android:background="#BBDEFB"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/top1Layout">

                <ImageView
                    android:id="@+id/imgTop3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player 3"
                    android:textColor="#0D47A1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvScore3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="700 pts"
                    android:textColor="#1565C0"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Top 4 & 5 bên dưới podium -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/top4Layout"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginEnd="16dp"
                android:background="#E3F2FD"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgTop4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 4"
                    android:textColor="#0D47A1" />

                <TextView
                    android:id="@+id/tvScore4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="650 pts"
                    android:textColor="#1565C0"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top5Layout"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:background="#E3F2FD"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgTop5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 5"
                    android:textColor="#0D47A1" />

                <TextView
                    android:id="@+id/tvScore5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600 pts"
                    android:textColor="#1565C0"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Danh sách còn lại -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Other Players"
            android:textColor="#0D47A1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvOtherPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp" />
    </LinearLayout>
</ScrollView>
