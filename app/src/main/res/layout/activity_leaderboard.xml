<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    android:fillViewport="true"
    tools:context=".Leaderboard">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderboard_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.08"
            android:layout_marginBottom="28dp" />

        <!-- PODIUM TOP 1-3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/podiumLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Top 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTop2"
                android:layout_width="90dp"
                android:layout_height="180dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E5E7EB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardTop1"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <!-- Avatar + huy chương nhỏ -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgAvatar2"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_default_avatar"
                            app:shapeAppearanceOverlay="@style/AvatarCircle"
                            app:strokeColor="#9CA3AF"
                            app:strokeWidth="2dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_medal_silver_small"
                            android:layout_alignBottom="@id/imgAvatar2"
                            android:layout_alignEnd="@id/imgAvatar2"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:padding="2dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player2_name"
                        android:textColor="#1F2937"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvScore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player2_score"
                        android:textColor="#3B82F6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Top 1 - CHAMPION + WINS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTop1"
                android:layout_width="110dp"
                android:layout_height="240dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTop2"
                app:layout_constraintEnd_toStartOf="@id/cardTop3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_podium_gold">

                    <!-- Avatar + huy chương + vòng vàng -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/ic_crown_circle"
                            android:layout_centerInParent="true" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgAvatar1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_default_avatar"
                            app:shapeAppearanceOverlay="@style/AvatarCircle"
                            app:strokeColor="#F59E0B"
                            app:strokeWidth="3dp"
                            android:layout_centerInParent="true" />

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignBottom="@id/imgAvatar1"
                            android:layout_alignEnd="@id/imgAvatar1"
                            android:layout_marginBottom="-6dp"
                            android:layout_marginEnd="-6dp"
                            android:background="@drawable/bg_medal_small_circle"
                            android:padding="3dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player1_name"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:shadowColor="#92400E"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:id="@+id/tvScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player1_score"
                        android:textColor="#FEF3C7"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <!-- SỐ LẦN CHIẾN THẮNG -->

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Top 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTop3"
                android:layout_width="90dp"
                android:layout_height="160dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#E5E7EB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardTop1"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgAvatar3"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_default_avatar"
                            app:shapeAppearanceOverlay="@style/AvatarCircle"
                            app:strokeColor="#D97706"
                            app:strokeWidth="2dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_medal_bronze_small"
                            android:layout_alignBottom="@id/imgAvatar3"
                            android:layout_alignEnd="@id/imgAvatar3"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:padding="2dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player3_name"
                        android:textColor="#1F2937"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvScore3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player3_score"
                        android:textColor="#F59E0B"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Top 4 & 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTop4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgTop4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginVertical="4dp" />

                    <TextView
                        android:id="@+id/tvName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player4_name"
                        android:textColor="#374151"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScore4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player4_score"
                        android:textColor="#10B981"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTop5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgTop5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginVertical="4dp" />

                    <TextView
                        android:id="@+id/tvName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player5_name"
                        android:textColor="#374151"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScore5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player5_score"
                        android:textColor="#10B981"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Other Players Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_players_label"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E40AF"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/ic_trophy_small"
            android:drawablePadding="8dp" />

        <!-- ListView -->
        <ListView
            android:id="@+id/lvOtherPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_list_rounded"
            android:divider="#E5E7EB"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="none" />

    </LinearLayout>

</ScrollView>