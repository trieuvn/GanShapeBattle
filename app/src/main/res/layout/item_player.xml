<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeColor="#0A6AED"
    app:strokeWidth="1.5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar đối thủ hoặc biểu tượng trận đấu -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivOpponentAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/AvatarCircle"
            app:strokeColor="#0A6AED"
            app:strokeWidth="2dp"
            android:src="@drawable/ic_default_avatar"
            android:contentDescription="Avatar đối thủ" />

        <!-- Thông tin trận đấu -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp">

            <!-- Tên đối thủ hoặc loại trận -->
            <TextView
                android:id="@+id/tvOpponentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player_one"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:ellipsize="end"
                android:maxLines="1"/>

            <!-- Thời gian & Kết quả -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/10/2025, 14:30"
                    android:textSize="13sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • Win"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Nút xem chi tiết -->
        <ImageButton
            android:id="@+id/btnViewDetail"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="#0A6AED"
            android:contentDescription="Xem chi tiết trận đấu"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>