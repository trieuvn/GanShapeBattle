<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F8FF"
    tools:context=".admin.AddEditLobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thẻ CardView bao quanh nội dung -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvLobbyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:text="Tạo phòng chơi mới"
                    android:textColor="#1565C0"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Admin Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerLobbyAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_border" />

                <!-- Chế độ chơi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chế độ chơi"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerLobbyMode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_border" />

                <!-- Trạng thái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerLobbyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/spinner_border" />

                <!-- EditText cơ bản -->
                <EditText
                    android:id="@+id/etLobbyMaxPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Số người chơi tối đa"
                    android:background="@drawable/edittext_border"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etLobbyDesignTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Thời gian thiết kế (giây)"
                    android:background="@drawable/edittext_border"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etLobbyVoteTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Thời gian bình chọn (giây)"
                    android:background="@drawable/edittext_border"
                    android:inputType="number" />

                <!-- Ngày tạo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo (Created Date)"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCreatedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="(YYYY-MM-DD)"
                        android:inputType="date" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ngày bắt đầu -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu (Begin Date)"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBeginDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="(YYYY-MM-DD)"
                        android:inputType="date" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nút Lưu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveLobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/btn_gradient_blue"
                    android:paddingVertical="14dp"
                    android:text="Lưu phòng chơi"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@null" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
