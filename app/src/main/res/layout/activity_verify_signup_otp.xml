<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F5F9FF">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kích hoạt tài khoản"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0A6AED"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Mô tả -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập mã OTP 6 chữ số đã được gửi đến email của bạn để hoàn tất kích hoạt."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#555555"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="16dp"/>

    <!-- Ô nhập OTP -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="#0A6AED"
        app:hintTextColor="#0A6AED"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="#0A6AED">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputSignupOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium"
            android:hint="Nhập mã OTP"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="48dp"
            android:textColor="#1A1A1A"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút kích hoạt – MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerifySignup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:text="Kích hoạt tài khoản"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"

        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="12dp"
        android:elevation="6dp"
        android:stateListAnimator="@drawable/button_elevation"/>

    <!-- Gửi lại mã -->
    <TextView
        android:id="@+id/tvResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không nhận được mã? Gửi lại"
        android:textSize="14sp"
        android:textColor="#0A6AED"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>