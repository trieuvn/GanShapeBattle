<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.GalleryDetailActivity">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết bộ sưu tập"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0A6AED"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"/>

            <!-- Card thông tin -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#0A6AED"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Gallery ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gallery ID"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvGalleryId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="monospace"
                            tools:text="gallery-uuid-123"/>
                    </LinearLayout>

                    <!-- Tên bộ sưu tập -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tên bộ sưu tập"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvGalleryName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            tools:text="Tranh phong cảnh"/>
                    </LinearLayout>

                    <!-- Mô tả -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mô tả"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvGalleryDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            tools:text="Các bức tranh về cảnh đẹp"/>
                    </LinearLayout>

                    <!-- Loại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Loại"
                            android:textColor="#0A6AED"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/tvGalleryType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public"
                            app:chipBackgroundColor="@color/chip_public"
                            app:chipStrokeColor="#0A6AED"
                            app:chipStrokeWidth="1.5dp"
                            android:textColor="#0A6AED"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:chipCornerRadius="16dp"
                            app:iconStartPadding="8dp"
                            app:textStartPadding="12dp"
                            app:textEndPadding="12dp"
                            app:iconEndPadding="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Cập nhật -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateGallery"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cập nhật"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gradient_blue"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="16dp"
                    android:elevation="8dp"
                    app:stateListAnimator="@animator/button_elevation"/>

                <!-- Xóa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteGallery"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Xóa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_red"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="16dp"
                    android:elevation="8dp"
                    app:stateListAnimator="@animator/button_elevation"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FAB Cập nhật (nổi bật) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Cập nhật nhanh"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_edit"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="20dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="Cập nhật bộ sưu tập"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>