<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.PictureCRUDActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewLobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:hint="@string/search_picture_hint"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_picture_hint"
        android:background="@drawable/bg_soft_blue_gradient"
        app:cornerRadius="24dp"
        style="@style/Widget.AppCompat.SearchView.ActionBar" />
    <ListView
        android:id="@+id/lvPictures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewLobbies"
        android:layout_above="@+id/btnAddPicture"
        android:divider="#EEEEEE"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="@string/add_new_picture_button"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/ic_add_photo"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        android:elevation="8dp"
        android:stateListAnimator="@drawable/button_elevation"
        android:contentDescription="Thêm hình ảnh mới"/>
</RelativeLayout>