<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".LobbyActivity">

    <!-- Nút Tạo phòng (ban đầu) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCreateLobby"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:background="@drawable/btn_gradient_blue"
        android:elevation="12dp"
        android:text="Tạo phòng chơi"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:cornerRadius="32dp"
        app:icon="@drawable/ic_add_lobby"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconTint="#FFFFFF"
        app:rippleColor="#33FFFFFF"
        android:stateListAnimator="@drawable/button_elevation"
        tools:visibility="visible" />

    <!-- Layout: Thông tin phòng -->
    <LinearLayout
        android:id="@+id/layoutLobbyInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Mời bạn bè quét mã!"
            android:textColor="#0A6AED"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- QR Code trong Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:strokeColor="#0A6AED"
            app:strokeWidth="3dp">

            <ImageView
                android:id="@+id/imageViewQRCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:scaleType="center"
                tools:src="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Mã phòng + Copy -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/badge_lobby"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/textViewLobbyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phòng: 1A2B3C"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCopyCode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sao chép mã phòng"
                app:srcCompat="@drawable/ic_copy"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Chế độ chơi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Chế độ chơi"
            android:textColor="#1A1A1A"
            android:textSize="18sp" />

        <!-- Segmented Button -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroupMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedButton="@id/btnVote"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVote"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Vote"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:strokeColor="#0A6AED"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Rate"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:strokeColor="#0A6AED"
                app:strokeWidth="2dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <!-- Nút điều khiển (dưới cùng) -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- Xóa phòng -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_red"
            android:elevation="8dp"
            android:text="Xóa phòng"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_delete"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconTint="#FFFFFF"
            app:rippleColor="#33FFFFFF" />

        <!-- Bắt đầu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBegin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green"
            android:elevation="8dp"
            android:text="Bắt đầu"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_play"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconTint="#FFFFFF"
            app:rippleColor="#33FFFFFF" />

    </LinearLayout>

</LinearLayout>