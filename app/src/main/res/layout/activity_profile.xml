<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật Hồ sơ"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#0A6AED"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"/>

        <!-- Avatar + FAB chọn ảnh (FrameLayout) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_avatar"
                app:shapeAppearanceOverlay="@style/AvatarCircle"
                app:strokeColor="#0A6AED"
                app:strokeWidth="3dp"
                android:elevation="6dp"
                android:contentDescription="Ảnh đại diện" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSelectAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="100dp"
                android:contentDescription="Chọn ảnh đại diện"
                app:backgroundTint="#FFFFFF"
                app:borderWidth="2dp"
                app:elevation="6dp"
                app:fabCustomSize="48dp"
                app:maxImageSize="28dp"
                app:pressedTranslationZ="12dp"
                app:rippleColor="#330A6AED"
                app:srcCompat="@drawable/ic_camera"
                app:tint="#0A6AED" />

        </FrameLayout>

        <!-- Email (không sửa được) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#0A6AED"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_label_locked"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0A6AED"/>

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:layout_marginTop="4dp"
                    tools:text="user@example.com"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#0A6AED"
            app:hintTextColor="#0A6AED"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#0A6AED">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProfileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username_hint"
                android:textSize="18sp"
                android:paddingStart="48dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Số điện thoại -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#0A6AED"
            app:hintTextColor="#0A6AED"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="#0A6AED">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProfilePhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:textSize="18sp"
                android:paddingStart="48dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ngày sinh -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#0A6AED"
            app:hintTextColor="#0A6AED"
            app:startIconDrawable="@drawable/ic_calendar"
            app:startIconTint="#0A6AED"
            app:endIconMode="clear_text"
            app:endIconTint="#0A6AED">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProfileDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dob_hint"
                android:focusable="false"
                android:clickable="true"
                android:textSize="18sp"
                android:paddingStart="48dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="56dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nút Lưu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save_changes_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="@drawable/btn_gradient_blue"
            app:rippleColor="#33FFFFFF"
            app:cornerRadius="16dp"
            android:elevation="8dp"
            android:stateListAnimator="@drawable/button_elevation"/>

    </LinearLayout>
</ScrollView>