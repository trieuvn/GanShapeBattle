<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_soft_blue_gradient"
    tools:context=".DesignActivity">

    <!-- 🌊 Toolbar hiện đại gradient xanh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/toolbar_blue_gradient"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/avatar_background"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_player"
            android:contentDescription="@drawable/ic_default_avatar"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/new_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_toolbar_icon"
            android:contentDescription="@string/start_new"
            android:src="@drawable/new_pic" />

        <ImageButton
            android:id="@+id/draw_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_toolbar_icon"
            android:contentDescription="@string/brush"
            android:src="@drawable/brush" />

        <ImageButton
            android:id="@+id/erase_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_toolbar_icon"
            android:contentDescription="@string/erase"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_toolbar_icon"
            android:contentDescription="@string/save"
            android:src="@drawable/save" />

        <ImageView
            android:id="@+id/ganimage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/bg_image_border"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_ganimage" />
    </LinearLayout>

    <!-- 🔵 Nút Transform Gradient -->
    <Button
        android:id="@+id/transform_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_blue_rounded_modern"
        android:paddingVertical="14dp"
        android:text="@string/transform"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:backgroundTint="@null" />

    <!-- ✏️ Khu vực vẽ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_canvas_card"
        android:elevation="6dp">

        <com.ganshapebattle.view.DrawingView
            android:id="@+id/drawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#007BFF"
            android:visibility="gone" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/bg_palette_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_palette_card"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:gravity="center">
    <LinearLayout
        android:id="@+id/paint_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Sky -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_red"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF660000"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sky"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Mountain -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_gradient_red"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FFFF0000"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountain"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Tree -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_gradient_blue"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF007BFF"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tree"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Grass -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_green"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF009900"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grass"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Flower -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_purple_gradient"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF990099"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flower"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Dòng 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Snow -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@android:color/white"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FFFFFFFF"
                    app:tint="#FF000000" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snow"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Rock -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="#FF787878"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF787878"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Shadow -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="#FF000000"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF000000"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shadow"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Water -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="@dimen/large_brush"
                    android:layout_height="@dimen/large_brush"
                    android:background="@drawable/btn_update_gradient"
                    android:onClick="paintClicked"
                    android:src="@drawable/paint"
                    android:tag="#FF007BFF"
                    app:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:textColor="#444"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
