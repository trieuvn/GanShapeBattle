<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng điều khiển"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnManageUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Người dùng (User)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManageLobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Phòng chơi (Lobby)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManageGalleries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Bộ sưu tập (Gallery)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManagePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Hình ảnh (Picture)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnManagePlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Người chơi (Player)"/>

</LinearLayout>