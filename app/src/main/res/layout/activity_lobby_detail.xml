<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".admin.LobbyDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card chứa tất cả thông tin lobby -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Lobby ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="2dp"
                    android:text="Lobby ID"
                    android:textColor="#333333"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLobbyId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:text="lobby-uuid-123" />

                <!-- Admin -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="2dp"
                    android:text="Admin"
                    android:textColor="#333333"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLobbyAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:text="admin_user" />

                <!-- Chế độ chơi -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="2dp"
                    android:text="Chế độ chơi"
                    android:textColor="#333333"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLobbyMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:text="Classic" />

                <!-- Trạng thái -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="2dp"
                    android:text="Trạng thái"
                    android:textColor="#333333"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLobbyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:text="Waiting" />

                <!-- Số người chơi tối đa -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="2dp"
                    android:text="Số người chơi tối đa"
                    android:textColor="#333333"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLobbyMaxPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_marginBottom="0dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    tools:text="8" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button Cập nhật Xếp hạng -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculateRanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_purple_gradient"
            android:paddingVertical="14dp"
            android:text="Cập nhật Xếp hạng"
            android:textColor="#ffffff"
            android:textSize="22sp"
            app:backgroundTint="@null"/>
        <!-- Buttons Cập nhật / Xóa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="4dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateLobby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_update_gradient"
                android:paddingVertical="14dp"
                android:text="Cập nhật"
                android:textColor="#ffffff"
                android:textSize="22sp"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteLobby"
                style="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_delete_gradient"
                android:paddingVertical="14dp"
                android:text="Xóa"
                android:textColor="#ffffff"
                android:textSize="22sp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
