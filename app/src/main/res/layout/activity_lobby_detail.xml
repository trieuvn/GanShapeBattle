<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    tools:context=".admin.LobbyDetailActivity">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết phòng chơi"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0A6AED"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"/>

            <!-- Card thông tin -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="#0A6AED"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Lobby ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lobby_id_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvLobbyId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="monospace"
                            tools:text="lobby-uuid-123"/>
                    </LinearLayout>

                    <!-- Admin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lobby_admin_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvLobbyAdmin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            tools:text="admin_user"/>
                    </LinearLayout>

                    <!-- Chế độ chơi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lobby_mode_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvLobbyMode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            tools:text="Classic"/>
                    </LinearLayout>

                    <!-- Trạng thái -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="@string/lobby_status_label"
                            android:textColor="#0A6AED"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/tvLobbyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting"
                            app:chipBackgroundColor="@drawable/chip_waiting"
                            app:chipStrokeColor="#0A6AED"
                            app:chipStrokeWidth="1.5dp"
                            android:textColor="#0A6AED"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:chipCornerRadius="16dp"
                            app:iconStartPadding="8dp"
                            app:textStartPadding="12dp"
                            app:textEndPadding="12dp"
                            app:iconEndPadding="8dp"/>
                    </LinearLayout>

                    <!-- Số người tối đa -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/lobby_max_players_label"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#0A6AED"/>
                        <TextView
                            android:id="@+id/tvLobbyMaxPlayers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            tools:text="8"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Cập nhật -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateLobby"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/update_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_gradient_blue"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="16dp"
                    android:elevation="8dp"
                    android:stateListAnimator="@drawable/button_elevation"/>

                <!-- Xóa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteLobby"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/delete_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/btn_red"
                    app:rippleColor="#33FFFFFF"
                    app:cornerRadius="16dp"
                    android:elevation="8dp"
                    android:stateListAnimator="@drawable/button_elevation"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FAB Cập nhật xếp hạng -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnCalculateRanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="@string/calculate_ranks_button"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_trophy"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="20dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="Cập nhật xếp hạng người chơi"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>