<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".admin.AddEditPictureActivity">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvPictureTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm hình ảnh mới"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Xem trước ảnh -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="#0D47A1"
                app:strokeWidth="1.5dp">

                <ImageView
                    android:id="@+id/ivSelectedImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_avatar"
                    android:contentDescription="Ảnh đã chọn"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectImage"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:text="Chọn ảnh"
                android:textColor="#0D47A1"
                app:icon="@drawable/ic_camera"
                app:iconTint="#0D47A1"
                app:strokeColor="#0D47A1"
                app:strokeWidth="1.5dp"
                app:cornerRadius="20dp"/>

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="#0D47A1"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Tên ảnh -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPictureName"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_label"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPictureName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tên ảnh"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mô tả -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPictureDescription"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_description"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPictureDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mô tả (tùy chọn)"
                            android:inputType="textCapSentences"
                            android:maxLines="3"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Loại ảnh -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại ảnh"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbTypeArt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nghệ thuật"
                        android:layout_marginEnd="24dp"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbTypePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhiếp ảnh"
                        android:layout_marginEnd="24dp"/>

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbTypeDigital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Digital Art"/>

                    <!-- Tags -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tags"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/checkboxGroupTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacing="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/cbTagNature"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thiên nhiên"
                            app:chipBackgroundColor="#E3F2FD"
                            app:checkedIconEnabled="false"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/cbTagCity"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thành phố"
                            app:chipBackgroundColor="#E3F2FD"
                            app:checkedIconEnabled="false"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/cbTagPeople"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Con người"
                            app:chipBackgroundColor="#E3F2FD"
                            app:checkedIconEnabled="false"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Bộ sưu tập -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn bộ sưu tập"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPictureGallery"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_gallery"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerPictureGallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Người tạo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn người tạo"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPictureUser"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerPictureUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút Lưu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePicture"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Lưu hình ảnh"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_save"
                app:iconTint="#FFFFFF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gradient_blue"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="20dp"
                android:elevation="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- FAB Lưu nhanh -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Lưu nhanh"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_save"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="24dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>