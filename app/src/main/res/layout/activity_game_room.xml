<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitVote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Game Room"
                android:textColor="#0D47A1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Card thông tin phòng -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="#1976D2"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRoomInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: #12345 | Mode: Design Battle"
                        android:textColor="#1565C0"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chọn chế độ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chọn chế độ"
                android:textColor="#0D47A1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Exposed Dropdown Menu -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxStrokeColor="#1976D2"
                app:hintTextColor="#1976D2"
                app:startIconDrawable="@drawable/ic_mode"
                app:startIconTint="#1976D2">

                <AutoCompleteTextView
                    android:id="@+id/spinnerMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Design Battle"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tiêu đề vote -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Vote cho thiết kế đẹp nhất"
                android:textColor="#0D47A1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ListView Vote -->
            <ListView
                android:id="@+id/lvPlayersVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:divider="#EEEEEE"
                android:dividerHeight="8dp"
                android:minHeight="200dp"
                android:padding="8dp"
                android:scrollbarStyle="outsideOverlay" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_empty_vote"
                    app:tint="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Chưa có người chơi"
                    android:textColor="#999999"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Nút Submit -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitVote"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_margin="24dp"
        android:background="@drawable/btn_gradient_blue"
        android:elevation="12dp"
        android:text="Submit Vote"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:cornerRadius="32dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#33FFFFFF"
        android:stateListAnimator="@drawable/button_elevation" />

</androidx.constraintlayout.widget.ConstraintLayout>