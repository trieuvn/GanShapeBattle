<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    tools:context=".LobbyUserActivity">

    <!-- Nền và khung ngoài -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@drawable/bg_outer_border">

        <!-- CardView chứa nội dung -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center_horizontal">

                <!-- Layout: Tham gia phòng -->
                <LinearLayout
                    android:id="@+id/joinLobbyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <!-- Tiêu đề -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tham gia phòng chơi"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Mô tả -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhập mã phòng được cung cấp để tham gia trò chơi cùng bạn bè."
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="sans-serif" />

                    <!-- Input mã phòng -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#0A6AED"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2.5dp"
                        app:hintTextColor="#0A6AED"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#0A6AED">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextLobbyId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-medium"
                            android:hint="Nhập mã phòng"
                            android:imeOptions="actionDone"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:textColor="#1A1A1A"
                            android:textSize="18sp"
                            android:letterSpacing="0.1"
                            android:paddingStart="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nút Tham gia -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonJoin"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Tham gia"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_gradient_blue"
                        app:rippleColor="#33FFFFFF"
                        app:cornerRadius="16dp"
                        android:elevation="8dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconTint="#FFFFFF"
                        app:iconGravity="end"
                        app:iconPadding="12dp"
                        android:stateListAnimator="@drawable/button_elevation" />
                </LinearLayout>

                <!-- Layout: Đã trong phòng -->
                <LinearLayout
                    android:id="@+id/inLobbyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_check_circle"
                        app:shapeAppearanceOverlay="@style/Circle"
                        app:strokeColor="#0A6AED"
                        app:strokeWidth="4dp"
                        android:layout_marginBottom="24dp"
                        app:tint="#0A6AED" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã tham gia phòng!"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#0A6AED"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textViewLobbyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã phòng: 1A2B3C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:background="@drawable/badge_lobby"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang chờ chủ phòng bắt đầu..."
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonLeave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Rời phòng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_red"
                        app:rippleColor="#33FFFFFF"
                        app:cornerRadius="16dp"
                        android:elevation="8dp"
                        app:icon="@drawable/ic_exit"
                        app:iconTint="#FFFFFF"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        android:stateListAnimator="@drawable/button_elevation" />
                </LinearLayout>

                <!-- Loading -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminate="true"
                    app:indicatorColor="#0A6AED"
                    app:trackColor="#330A6AED"
                    app:indicatorSize="64dp"
                    app:trackThickness="6dp"
                    android:visibility="gone"
                    android:layout_marginTop="32dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
