<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F5F9FF">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt lại mật khẩu"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0A6AED"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Mô tả -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập mật khẩu mới và xác nhận để hoàn tất."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#555555"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="8dp"/>

    <!-- Mật khẩu mới -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="#0A6AED"
        app:hintTextColor="#0A6AED"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="#0A6AED"
        app:endIconMode="password_toggle"
        app:endIconTint="#0A6AED"
        app:passwordToggleTint="#0A6AED"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionNext"
            android:paddingStart="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="56dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Xác nhận mật khẩu -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="#0A6AED"
        app:hintTextColor="#0A6AED"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="#0A6AED"
        app:endIconMode="password_toggle"
        app:endIconTint="#0A6AED"
        app:passwordToggleTint="#0A6AED"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionDone"
            android:paddingStart="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="56dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Lưu -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Lưu mật khẩu mới"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="16dp"
        android:elevation="8dp"
        app:stateListAnimator="@animator/button_elevation"
        android:enabled="false" />

</LinearLayout>