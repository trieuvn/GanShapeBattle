<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".MainActivity">

    <!-- AppBar - Gradient Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_header"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="36dp"
            android:paddingBottom="32dp">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarImage"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_player"
                app:shapeAppearanceOverlay="@style/AvatarCircle"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Hi, Alex -->
            <TextView
                android:id="@+id/idDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Alex"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/avatarImage"
                app:layout_constraintTop_toTopOf="@id/avatarImage"
                app:layout_constraintBottom_toTopOf="@id/nameid" />

            <!-- Find Your Favorits Here! -->
            <TextView
                android:id="@+id/nameid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:lineHeight="34sp"
                android:text="Find Your Favorits\nHere!"
                android:textColor="#E3F2FD"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/bellIcon"
                app:layout_constraintStart_toEndOf="@id/avatarImage"
                app:layout_constraintTop_toBottomOf="@id/idDashboard" />

            <!-- Bell Icon -->
            <ImageView
                android:id="@+id/bellIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bell"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/avatarImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:paddingBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp">

            <!-- Stats Row -->
            <LinearLayout
                android:id="@+id/rowcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <!-- Players -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/playersCard"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#E3F2FD"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_player"
                            app:tint="#0A6AED" />

                        <TextView
                            android:id="@+id/tvPlayersLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Người chơi"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPlayersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="152"
                            android:textColor="#0A6AED"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Lobbies -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/galleriesCard"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#BBDEFB"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_gallery"
                            app:tint="#1976D2" />

                        <TextView
                            android:id="@+id/tvLobby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Phòng chơi"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLobbiesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="#1976D2"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pictures -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/picturesCard"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#E1F5FE"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_picture"
                            app:tint="#0288D1" />

                        <TextView
                            android:id="@+id/tvPicturesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Hình ảnh"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPicturesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="240"
                            android:textColor="#0288D1"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Ranks -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/onlineCard"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#B3E5FC"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_online"
                            app:tint="#0277BD" />

                        <TextView
                            android:id="@+id/tvOnlineLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Xếp hạng"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvOnlineCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textColor="#0277BD"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Menu Row 1 -->
            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard"
                    android:layout_width="0dp"
                    android:layout_height="175dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="14dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/taskImage"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/ic_task" />

                        <TextView
                            android:id="@+id/taskName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhiệm vụ"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="175dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="14dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/shapeImage"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:src="@drawable/ic_shape"
                            app:tint="#0288D1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình dạng"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Menu Row 2 -->
            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Tham gia -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/participantCard"
                    android:layout_width="0dp"
                    android:layout_height="175dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="14dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardPreventCornerOverlap="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/participantImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/ic_participant"
                            app:tint="#0277BD" />

                        <TextView
                            android:id="@+id/participantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tham gia"
                            android:textColor="#1A1A1A"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:letterSpacing="0.02" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Báo cáo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/reportCard"
                    android:layout_width="0dp"
                    android:layout_height="175dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="14dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardPreventCornerOverlap="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/reportImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:src="@drawable/ic_report"
                            app:tint="#01579B" />

                        <TextView
                            android:id="@+id/reportName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Báo cáo"
                            android:textColor="#1A1A1A"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:letterSpacing="0.02" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Thêm khoảng trống dưới cùng để tránh bị che bởi FAB (nếu có) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="90dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>