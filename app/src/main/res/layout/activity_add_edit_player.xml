<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    tools:context=".admin.AddEditPlayerActivity">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvPlayerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chấm điểm người chơi"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="#0D47A1"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Người dùng -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn người dùng"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPlayerUser"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerPlayerUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phòng chơi -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn phòng chơi"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPlayerLobby"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_gallery"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerPlayerLobby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Hình ảnh -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn hình ảnh"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPlayerPicture"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:startIconDrawable="@drawable/ic_picture"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerPlayerPicture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Điểm -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPlayerPoint"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/ic_star"
                        app:startIconTint="#0D47A1"
                        app:hintTextColor="#0D47A1"
                        app:boxStrokeColor="#0D47A1"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlayerPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Điểm (0 - 100)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút Lưu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePlayer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Lưu điểm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_save"
                app:iconTint="#FFFFFF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gradient_blue"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="20dp"
                android:elevation="8dp"/>

        </LinearLayout>
    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>