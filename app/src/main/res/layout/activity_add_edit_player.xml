<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_outer_border"
    tools:context=".admin.AddEditPlayerActivity">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvPlayerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/player_scoring_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Card Chấm điểm -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Spinner Chọn User (Vô hiệu hóa) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_user_player"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spinnerUser"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:enabled="false" />

                    <!-- Spinner Chọn Lobby (Vô hiệu hóa) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_lobby"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spinnerLobby"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:enabled="false" />

                    <!--
                        SỬA LỖI: Thay thế Spinner bằng ImageView
                    -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_picture"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/imageViewPlayerPicture"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:background="#E0E0E0"
                            android:contentDescription="@string/select_picture" />
                    </com.google.android.material.card.MaterialCardView>
                    <!-- KẾT THÚC SỬA LỖI -->

                    <!-- EditText Nhập điểm -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPlayerPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/black"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlayerPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/point_hint"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="40dp"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút Lưu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePlayer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="@string/save_score_button"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_save"
                app:iconTint="#FFFFFF"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_gradient_blue"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="20dp"
                android:elevation="8dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>