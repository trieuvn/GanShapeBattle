<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".admin.AddEditPlayerActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Chấm điểm người chơi"
                android:textColor="#1E88E5"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Chọn người dùng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_marginBottom="6dp"
                android:text="Chọn người dùng (User)"
                android:textColor="#444"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPlayerUser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20px"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- Chọn phòng chơi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_marginBottom="6dp"
                android:text="Chọn phòng chơi (Lobby)"
                android:textColor="#444"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPlayerLobby"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20px"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- Chọn ảnh -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_marginBottom="6dp"
                android:text="Chọn ảnh (Picture)"
                android:textColor="#444"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerPlayerPicture"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="20px"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- Điểm -->
            <EditText
                android:id="@+id/etPlayerPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text"
                android:hint="Nhập điểm..."
                android:inputType="number" />

            <!-- Nút lưu -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_gradient_blue"
                android:paddingVertical="14dp"
                android:text="Lưu điểm"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
