<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF"
    tools:context=".admin.Gallery">

    <!-- AppBar với Search + Filter -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/gallery_title"
            app:titleTextColor="#1976D2"
            app:subtitleTextColor="#666666"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"/>

        <!-- SearchBar -->
        <com.google.android.material.search.SearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="@string/search_gallery_hint"
            app:icon="@drawable/ic_search"
            app:iconTint="#1976D2"
            app:strokeColor="#1976D2"
            app:strokeWidth="1.5dp"
            app:cornerRadius="24dp"
            android:backgroundTint="#FFFFFF"
            style="@style/Widget.Material3.SearchBar.Outlined"/>

        <!-- Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center">

            <!-- Exposed Dropdown Filter -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeColor="#1976D2"
                app:hintTextColor="#1976D2"
                app:startIconDrawable="@drawable/ic_filter"
                app:startIconTint="#1976D2"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Tất cả danh mục"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add Category Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:text="@string/add_category_button"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_add"
                app:iconTint="#FFFFFF"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_blue_rounded"
                app:rippleColor="#33FFFFFF"
                app:cornerRadius="20dp"
                android:elevation="6dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- GridView -->
    <GridView
        android:id="@+id/gridGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:horizontalSpacing="12dp"
        android:verticalSpacing="12dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <!-- FAB Thêm ảnh -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="@string/create_new_gallery_button"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_add_photo"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="24dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="@string/Addnewimage"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_gallery"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chưa có ảnh nào"
            android:textSize="18sp"
            android:textColor="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn nút bên dưới để thêm"
            android:textSize="14sp"
            android:textColor="#BBBBBB" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>