<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.LobbyCRUDActivity">

    <!-- SearchBar (Material 3) -->
    <com.google.android.material.search.SearchBar
        android:id="@+id/searchViewLobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:hint="@string/search_lobby_hint"
        app:icon="@drawable/ic_search"
        app:iconTint="#0A6AED"
        app:strokeColor="#0A6AED"
        app:strokeWidth="1.5dp"
        app:cornerRadius="24dp"
        android:backgroundTint="#FFFFFF"
        style="@style/Widget.Material3.SearchBar.Outlined"/>

    <!-- ListView (giữ nguyên) -->
    <ListView
        android:id="@+id/lvLobbies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewLobbies"
        android:layout_above="@+id/fabAddLobby"
        android:divider="#EEEEEE"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"/>

    <!-- FAB Tạo phòng -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="@string/create_new_lobby_button"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_add_lobby"
        app:iconTint="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        app:cornerRadius="20dp"
        android:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="@string/Createanewgameroom"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewLobbies"
        android:layout_above="@+id/fabAddLobby"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_lobby"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chưa có phòng chơi nào"
            android:textSize="18sp"
            android:textColor="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn nút bên dưới để tạo phòng mới"
            android:textSize="14sp"
            android:textColor="#BBBBBB" />

    </LinearLayout>

</RelativeLayout>