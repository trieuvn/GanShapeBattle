<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    tools:context=".admin.LobbyCRUDActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewLobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:hint="@string/search_lobby_hint"
        app:iconifiedByDefault="false"
        app:queryHint="@string/search_lobby_hint"
        android:background="@drawable/bg_soft_blue_gradient"
        app:cornerRadius="24dp"
        style="@style/Widget.AppCompat.SearchView.ActionBar" />

    <ListView
        android:id="@+id/lvLobbies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewLobbies"
        android:layout_above="@+id/fabAddLobby"
        android:divider="#EEEEEE"
        android:dividerHeight="8dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fabAddLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:text="@string/create_new_lobby_button"
        android:textColor="#FFFFFF"
        android:drawableStart="@drawable/ic_add_lobby"
        android:drawableTint="#FFFFFF"
        android:drawablePadding="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/btn_gradient_blue"
        app:rippleColor="#33FFFFFF"
        android:elevation="8dp"
        android:stateListAnimator="@drawable/button_elevation"
        android:contentDescription="@string/Createanewgameroom"/>

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewLobbies"
        android:layout_above="@+id/fabAddLobby"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_lobby"
            app:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chưa có phòng chơi nào"
            android:textSize="18sp"
            android:textColor="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn nút bên dưới để tạo phòng mới"
            android:textSize="14sp"
            android:textColor="#BBBBBB" />

    </LinearLayout>
</RelativeLayout>