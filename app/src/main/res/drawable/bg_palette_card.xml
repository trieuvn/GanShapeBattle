<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền gradient nhẹ hơn, gần như trắng xanh -->
    <gradient
        android:startColor="#F7FAFF"
        android:endColor="#E3F2FD"
        android:angle="90"
        android:type="linear" />

    <!-- Bo góc nhẹ -->
    <corners android:radius="16dp" />

    <!-- Viền nhạt xanh để không đậm quá -->
    <stroke
        android:width="1dp"
        android:color="#C8DAF7" />

    <!-- Thêm bóng nhẹ tạo cảm giác nổi -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
