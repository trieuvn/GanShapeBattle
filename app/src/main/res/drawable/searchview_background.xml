<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="#FFFFFF"/>

    <!-- Bo góc tròn -->
    <corners android:radius="16dp"/>

    <!-- Viền xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <!-- Shadow giả (chỉ dùng padding để tạo cảm giác nâng lên) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
