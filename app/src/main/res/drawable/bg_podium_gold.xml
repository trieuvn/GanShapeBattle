<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp nền gradient vàng kim loại -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FEF3C7"
                android:centerColor="#FCD34D"
                android:endColor="#F59E0B"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Lớp viền vàng đậm (stroke) -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#D97706" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Hiệu ứng bóng nhẹ bên trong (inner shadow) -->
    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFFFFF"
                android:endColor="#33F59E0B"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="17dp" />
        </shape>
    </item>

</layer-list>